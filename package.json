{
  "name": "lane",
  "version": "0.1.0",
  "description": "A simple alternative to git worktrees",
  "type": "module",
  "bin": {
    "lane": "./lane"
  },
  "scripts": {
    "build": "bunx esbuild ./src/cli/index.ts --outfile=./lane.mjs --bundle --platform=node --format=esm --jsx=automatic --jsx-import-source=react && cat > ./lane << 'EOF'\n#!/usr/bin/env bun\nimport(\"./lane.mjs\");\nEOF\nchmod +x ./lane",
    "dev": "bun --watch ./src/cli/index.ts",
    "start": "./lane",
    "prepare": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": ["git", "worktree", "cli"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1",
    "react-devtools-core": "^7.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.0",
    "typescript": "^5.7.0"
  },
  "trustedDependencies": [
    "esbuild"
  ]
}
